{
  "name": "crushit",
  "version": "1.3.0",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:security": "node test-security.js"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|expo|@expo|expo-modules-core|@unimodules|@react-navigation|react-native-svg|expo-image-picker|expo-linear-gradient)/)"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "moduleNameMapper": {
      "\\.svg": "<rootDir>/__mocks__/svgMock.js"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}",
      "!**/node_modules/**"
    ],
    "globals": {
      "__DEV__": true
    }
  },
  "dependencies": {
    "@expo-google-fonts/architects-daughter": "^0.4.1",
    "@expo-google-fonts/caveat": "^0.4.2",
    "@expo-google-fonts/dancing-script": "^0.4.2",
    "@expo-google-fonts/indie-flower": "^0.4.1",
    "@expo-google-fonts/lobster": "^0.4.1",
    "@expo-google-fonts/pacifico": "^0.4.1",
    "@expo-google-fonts/permanent-marker": "^0.4.0",
    "@expo-google-fonts/sacramento": "^0.4.1",
    "@expo-google-fonts/satisfy": "^0.4.1",
    "@expo-google-fonts/shadows-into-light": "^0.4.1",
    "@expo/metro-runtime": "~6.1.2",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-native-community/slider": "5.0.1",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/native-stack": "^6.9.17",
    "expo": "~54.0.0",
    "expo-font": "~14.0.9",
    "expo-image-picker": "~17.0.8",
    "expo-linear-gradient": "~15.0.7",
    "expo-secure-store": "~15.0.0",
    "expo-status-bar": "~3.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-native": "^0.81.5",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "^15.12.1",
    "react-native-web": "^0.21.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.3.3",
    "jest": "~29.7.0",
    "jest-expo": "~54.0.0",
    "react-test-renderer": "^19.1.0"
  },
  "private": true
}
